@model IEnumerable<kinnemed05.Models.espirometria>

@{
    ViewBag.Title = "Index";
}

<h2>Espirometría</h2>

<p>
    @Html.ActionLink("Nuevo Exámen", "Create", "", new { @class = "btn btn-default" })
</p>
<div class="panel panel-default">
    <div class="panel-body">
        <table class="table table-striped table-hover ">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.esp_id)
                </th>
                <th>
                    Paciente
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.esp_observacion)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.esp_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.paciente.pac_nombres) @Html.DisplayFor(modelItem => item.paciente.pac_apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.esp_observacion)
                    </td>
                    <td>
                        @Html.ActionLink("Descargar", "Download", new { id = item.esp_id }, new { @class = "iconb icon-pdf", @title = "Descargar" })
                        @Html.ActionLink("Editar", "Edit", new { id = item.esp_id }, new { @class = "iconb icon-edit", @title = "Editar" })
                        @Html.ActionLink("Detalle", "Details", new { id = item.esp_id }, new { @class = "iconb icon-detail", @title = "Detalle" })
                        @Html.ActionLink("Borrar", "Delete", new { id = item.esp_id }, new { @class = "iconb icon-delete", @title = "Borrar" })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
