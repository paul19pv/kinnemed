@model IEnumerable<kinnemed05.Models.espirometria>

@{
    ViewBag.Title = "Index";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Exámenes de Espirometria</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover ">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.esp_paciente)
                </th>
                <th>
                    Empresa
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.esp_medico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.esp_observacion)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.paciente.pac_nombres) @Html.DisplayFor(modelItem => item.paciente.pac_apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.paciente.empresa.emp_nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.medico.med_nombres) @Html.DisplayFor(modelItem => item.medico.med_apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.esp_observacion)
                    </td>
                    <td>
                        @*@Html.ActionLink("Detalle", "Details", "Espirometria", new { id = item.esp_id }, new { @class = "iconb icon-detail", @title = "Descargar" })*@
                        @Html.ActionLink("Descargar", "Descargar", "Espirometria", new { id = item.esp_id }, new { @class = "iconb icon-pdf", @title = "Descargar" })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
