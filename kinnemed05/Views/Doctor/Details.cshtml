@model kinnemed05.Models.doctor

@{
    ViewBag.Title = "Details";
}

<div class="col-lg-12">

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Detalle Médico</h3>
        </div>
        <div class="panel-body">
            <div class="col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.doc_cedula, new { @class = "control-label", @for = "inputDefault" })
                    @Html.TextBoxFor(model => model.doc_cedula, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.doc_nombres, new { @class = "control-label", @for = "inputDefault" })
                    @Html.TextBoxFor(model => model.doc_nombres, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.doc_apellidos, new { @class = "control-label", @for = "inputDefault" })
                    @Html.TextBoxFor(model => model.doc_apellidos, new { @class = "form-control", @readonly = "readonly" })
                </div>


            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.doc_codigo, new { @class = "control-label", @for = "inputDefault" })
                    @Html.TextBoxFor(model => model.doc_codigo, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.especialidad.esp_nombre, new { @class = "control-label", @for = "inputDefault" })
                    @Html.TextBoxFor(model => model.especialidad.esp_nombre, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.doc_correo, new { @class = "control-label", @for = "inputDefault" })
                    @Html.TextBoxFor(model => model.doc_correo, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.empresa.emp_nombre, new { @class = "control-label", @for = "inputDefault" })
                    @Html.TextBoxFor(model => model.empresa.emp_nombre, new { @class = "form-control", @readonly = "readonly" })
                </div>

            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.doc_firma, new { @class = "control-label" })
                    @if (Model.doc_firma != null)
                    {
                        string ruta = "data:image/jpg;base64," + Convert.ToBase64String((byte[])Model.doc_firma);
                        <div class="form-group">

                            <img src="@ruta" class="img-rounded" />
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-4" style="clear:both">
                <div class="form-group">
                    @Html.ActionLink("Regresar", "Index", "Medico", new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
</div>


