@model kinnemed05.Models.personal

@{
    ViewBag.Title = "Edit";
}
<script>
    $(document).ajaxStart(function () {
        $('#div_loading').show();
    });
    $(document).ajaxStop(function () {
        $('#div_loading').hide();
    });
    $(function () {
        
        if ($('#per_patologicas').is(':checked')) {
            $("#div_patologicas").show();
        }
        else {
            $("#div_patologicas").hide();
        }
        if ($("#per_quirurgicas").is(':checked')) {
            $("#div_quirurgicas").show();
        }
        else {
            $("#div_quirurgicas").hide();
        }
        if ($('#per_traumaticos').is(':checked')) {
            $("#div_traumaticos").show();
        }
        else {
            $("#div_traumaticos").hide();
        }
        if ($('#per_alergias').is(':checked')) {
            $("#div_alergias").show();
        }
        else {
            $("#div_alergias").hide();
        }
        if ($('#per_vacunas').is(':checked')) {
            $("#div_vacunas").show();
        }
        else {
            $("#div_vacunas").hide();
        }
        if ($('#per_otros').is(':checked')) {
            $("#div_otros").show();
        }
        else {
            $("#div_otros").hide();
        }

    })
</script>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">2 Antecedentes Personales</h3>
        </div>
        <div class="panel-body">
            @using (Ajax.BeginForm("Edit", new AjaxOptions { UpdateTargetId = "div_form", LoadingElementId = "div_loading", LoadingElementDuration = 100 }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.per_id)

                <div class="col-lg-4">
                    <div class="form-group">
                        <label>
                            @Html.CheckBoxFor(model => model.per_patologicas)
                            Patológicas
                        </label>
                        @Html.ValidationMessageFor(model => model.per_patologicas)
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>
                            @Html.CheckBoxFor(model => model.per_quirurgicas)
                            Quirúrgicas
                        </label>
                        @Html.ValidationMessageFor(model => model.per_quirurgicas)
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>
                            @Html.CheckBoxFor(model => model.per_traumaticos)
                            Traumáticas
                        </label>
                        @Html.ValidationMessageFor(model => model.per_traumaticos)
                    </div>
                </div>
                <div class="col-lg-4" style="clear:both">
                    <div id="div_patologicas" class="form-group" style="display: none;">
                        @Html.TextBoxFor(model => model.per_pat_txt, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.per_pat_txt)
                    </div>
                </div>

                <div class="col-lg-4">
                    <div id="div_quirurgicas" class="form-group" style="display: none;">
                        @Html.TextBoxFor(model => model.per_qui_txt, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.per_qui_txt)
                    </div>
                </div>

                <div class="col-lg-4">
                    <div id="div_traumaticos" class="form-group" style="display: none;">
                        @Html.TextBoxFor(model => model.per_tra_txt, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.per_tra_txt)
                    </div>
                </div>
                <div class="col-lg-4" style="clear:both">
                    <div class="form-group">
                        <label>
                            @Html.CheckBoxFor(model => model.per_alergias)
                            Alergias
                        </label>
                        @Html.ValidationMessageFor(model => model.per_alergias)
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>
                            @Html.CheckBoxFor(model => model.per_vacunas)
                            Vacunas
                        </label>
                        @Html.ValidationMessageFor(model => model.per_vacunas)
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>
                            @Html.CheckBoxFor(model => model.per_otros)
                            Otros
                        </label>
                        @Html.ValidationMessageFor(model => model.per_otros)
                    </div>
                </div>
                <div class="col-lg-4" style="clear: both">
                    <div id="div_alergias" class="form-group" style="display: none;">
                        @Html.TextBoxFor(model => model.per_ale_txt, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.per_ale_txt)
                    </div>
                </div>
                <div class="col-lg-4">
                    <div id="div_vacunas" class="form-group" style="display: none;">
                        @Html.TextBoxFor(model => model.per_vac_txt, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.per_vac_txt)
                    </div>
                </div>

                <div class="col-lg-4">
                    <div id="div_otros" class="form-group" style="display: none;">
                        @Html.TextBoxFor(model => model.per_otr_txt, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.per_otr_txt)
                    </div>
                </div>


                <div class="col-lg-3" style="clear:both; float:right">
                    <div class="form-group">
                        @Ajax.ActionLink("Anterior", "Edit", "Historia", new { id = Session["his_id"] }, new AjaxOptions { UpdateTargetId = "div_form", LoadingElementId = "div_loading", LoadingElementDuration = 100 }, new { @class = "btn btn-default" })
                        <input type="submit" value="Siguiente" class="btn btn-primary" />

                    </div>
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
