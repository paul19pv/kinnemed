                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_genero, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.pac_genero, new { @class = "form-control", @readonly = "readonly" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_estadocivil, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.pac_estadocivil, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_pais, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.pais.pais_nombre, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_instruccion, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.pac_instruccion, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_fechanacimiento, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.pac_fechanacimiento, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_edad, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.pac_edad, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_telefono, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.pac_telefono, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_celular, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.pac_celular, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_provincia, "Provincia", new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.canton.provincia.pro_nombre, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_canton, "Canton", new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.canton.can_nombre, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_direccion, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.pac_direccion, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_profesion, "Profesion", new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.profesion.pro_nombre, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_tipodiscapacidad, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.pac_tipodiscapacidad, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_porcentajediscapacidad, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.pac_porcentajediscapacidad, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_empresa, "Empresa", new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.empresa.emp_nombre, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_correo, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.pac_correo, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_firma, new {@class="control-label" })
                        @if (Model.pac_firma != null) {
                            string ruta = "data:image/jpg;base64," + Convert.ToBase64String((byte[])Model.lab_firma);
                                <div class="form-group">
                                    
                                    <div class="form-group">

                                        <img src="@ruta" class="img-rounded" />
                                    </div>
                                </div>
                        }
                    </div>

                </div>
                <div class="col-lg-4" style="clear:both">
                    <div class="form-group">
                        @Html.ActionLink("Regresar", "Index", "Paciente", new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        </div>
</div>

