@model kinnemed05.Models.paciente

@{
    ViewBag.Title = "Details";
}

<div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Detalle Paciente</h3>
            </div>
            <div class="panel-body">
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_cedula, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.pac_cedula, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.pac_nombres, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.pac_nombres, new { @class = "form-control", @readonly = "readonly" })
