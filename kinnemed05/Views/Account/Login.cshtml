@model kinnemed05.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}
<div id="login">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Login</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Usuario" })
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>
                <div class="form-group">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Contraseña" })
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
                <div class="col-lg-10 col-lg-offset-3">
                    <input class="btn btn-default" type="submit" value="Log in" />
                </div>
                <div class="col-lg-10 col-lg-offset-3">
                    @*@Html.ActionLink("Registrarse", "Register")*@
                </div>

            </div>
        </div>
    }
</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
