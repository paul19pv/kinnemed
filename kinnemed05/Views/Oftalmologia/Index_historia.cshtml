@model IEnumerable<kinnemed05.Models.oftalmologia>

@{
    ViewBag.Title = "Index";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Exámenes de Oftalmología</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.oft_diagnostico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.oft_indicaciones)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.oft_medico)
                </th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.oft_diagnostico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.oft_indicaciones)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.medico.med_nombres) @Html.DisplayFor(modelItem => item.medico.med_apellidos)
                    </td>
                   
                    <td>
                        @*@Html.ActionLink("Reporte", "Reporte", new { id = item.esp_id }, new { @class = "iconb icon-pdf", @title = "Reporte", @target = "_blank" })*@
                        @Html.ActionLink("Descargar", "Descargar", new { id = item.oft_id }, new { @class = "iconb icon-download", @title = "Descargar", @target = "_blank" })
                    </td>
                </tr>
            }

        </table>


    </div>
</div>
