@model kinnemed05.Models.actividad

@{
    ViewBag.Title = "Create";
}
<script>
    $(function () {
        $('.form-group select').addClass('form-control');
        $("#act_enf_fecha").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd/mm/yy"
        });
        $("#act_acc_fecha").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd/mm/yy"
        });
    })
</script>

@using (Ajax.BeginForm("Create", new AjaxOptions { UpdateTargetId = "div_form", LoadingElementId = "div_loading", LoadingElementDuration = 100, OnFailure = "error" })) { 
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Hábitos</h3>
            </div>
            <div class="panel-body">
                @Html.HiddenFor(model => model.act_id, new { Value = ViewBag.act_id })
                <div class="col-lg-2">
                    <div class="form-group">
                        @Html.LabelFor(model => model.act_enf_estado)
                        @Html.DropDownList("act_enf_estado", String.Empty)
                        @Html.ValidationMessageFor(model => model.act_enf_estado)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.act_acc_estado)
                        @Html.DropDownList("act_acc_estado", String.Empty)
                        @Html.ValidationMessageFor(model => model.act_enf_estado)
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.act_enf_descripcion)
                        @Html.TextBoxFor(model => model.act_enf_descripcion, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.act_enf_descripcion)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.act_acc_descripcion)
                        @Html.TextBoxFor(model => model.act_acc_descripcion, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.act_enf_descripcion)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.act_acc_capacidad)
                        @Html.TextBoxFor(model => model.act_acc_capacidad, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.act_acc_capacidad)
                    </div>

                </div>
                <div class="col-lg-2">
                    <div class="form-group">
                        @Html.LabelFor(model => model.act_enf_fecha)
                        @Html.TextBoxFor(model => model.act_enf_fecha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.act_enf_fecha)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.act_acc_fecha)
                        @Html.TextBoxFor(model => model.act_acc_fecha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.act_acc_fecha)
                    </div>

                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.act_enf_empresa)
                        @Html.TextBoxFor(model => model.act_enf_empresa, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.act_enf_empresa)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.act_acc_empresa)
                        @Html.TextBoxFor(model => model.act_acc_empresa, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.act_acc_empresa)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3" style="clear:both; float:right">
        <div class="form-group" style="float:right">
            @Ajax.ActionLink("Anterior", "Historico", "Ocupacional", new { id = ViewBag.act_id }, new AjaxOptions { UpdateTargetId = "div_form", LoadingElementId = "div_loading", LoadingElementDuration = 100, OnFailure = "error" }, new { @class = "btn btn-default" })
            <input type="submit" value="Siguiente" class="btn btn-primary" />

        </div>
    </div>

    
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
