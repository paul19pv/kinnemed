                    }

                </div>
            </div>

            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Químicos</h3>
                </div>
                <div class="panel-body">
                    @foreach (var item in Model.quimicos)
                    {
