@model kinnemed05.Models.medico

@{
    ViewBag.Title = "Edit";
}
<script>
    $(function () {
        $("#btn_upload").click(function () {
            $("#div_upload").show();
            $("#div_download").hide();
        });
        $("#btn_download").click(function () {
            $("#div_upload").hide();
            $("#div_download").show();
        });
    });
</script>
<div class="col-lg-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Editar Médico</h3>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Edit", "Medico", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.med_id)
                @Html.TextBoxFor(model => model.med_estado, new { @class = "form-control", Value = true, @type = "hidden" })
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.med_cedula, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.med_cedula, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.med_cedula)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.med_nombres, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.med_nombres, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.med_nombres)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.med_apellidos, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.med_apellidos, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.med_apellidos)
                    </div>
                    
                    

                </div>
                
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.med_codigo, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.med_codigo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.med_codigo)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.med_especialidad, new { @class = "control-label", @for = "inputDefault" })
                        @Html.DropDownList("med_especialidad", String.Empty)
                        @Html.ValidationMessageFor(model => model.med_especialidad)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.med_correo, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.med_correo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.med_correo)
                    </div>

                </div>
                <div class="col-lg-4">
                    <div id="div_download" class="form-group">
                        @Html.LabelFor(model => model.med_firma, new { @class = "control-label", @for = "inputDefault" })
                        @if (Model.med_firma != null)
                        {
                            string ruta = "data:image/jpg;base64," + Convert.ToBase64String((byte[])Model.med_firma);
                            <div class="form-group">
                                
                                <img src="@ruta" class="img-rounded" />
                            </div>
                        }
                        <input type="button" id="btn_upload" value="Cambiar" class="btn btn-default" style="clear:both;float:left;" />
                    </div>
                    <div id="div_upload" class="form-group" style="display:none;">
                        <label style="display:block;">Archivo</label>
                        <input type="file" name="Edit" id="Edit" style="display:inline">
                        <input type="button" id="btn_download" value="Mantener" class="btn btn-default" />
                        @Html.ValidationMessageFor(model => model.med_firma)
                        @Html.ValidationMessage("ext")
                    </div>

                </div>
                <div class="col-lg-4" style="clear:both">
                    <div class="form-group">
                        @Html.ActionLink("Regresar", "Index", "Medico", new { @class = "btn btn-default" })
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>

                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
