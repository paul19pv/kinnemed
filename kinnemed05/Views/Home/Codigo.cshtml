<script>
    $(document).ready(function () {

        var img = $("#imgCodeBar");
        if (img) img.hide();

        $("#btnImagen").click(cargarCodeBar);

        function cargarCodeBar() {
            var btn = $("#btnImagen");

            if (img) {
                var code = $("#txtFuentes");
                var fonts = $("#ddlFuentes");

                if (code && fonts) {

                    img[0].src = "/kinnemed01/Home/GetCodeBar?code=" +
                    code.val();
                    //"&format=" + fonts.val() +
                    //"&width=400&height=60&size=50";
                    img.show();
                }
            }
        }
    });
</script>