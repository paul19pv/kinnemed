@model kinnemed05.Models.laboratorista

@{
    ViewBag.Title = "Details";
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Información Técnico</h3>
        </div>
        <div class="panel-body">
            <div class="col-lg-4">
                <div class="form-group">

                    @Html.LabelFor(model => model.lab_cedula, new { @class = "control-label", @for = "inputDefault" })
                    @Html.TextBoxFor(model => model.lab_cedula, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group">

                    @Html.LabelFor(model => model.lab_correo, new { @class = "control-label", @for = "inputDefault" })
                    @Html.TextBoxFor(model => model.lab_correo, new { @class = "form-control", @readonly = "readonly" })
                </div>

            </div>
            <div class="col-lg-4">
                <div class="form-group">

                    @Html.LabelFor(model => model.lab_nombres, new { @class = "control-label", @for = "inputDefault" })
                    @Html.TextBoxFor(model => model.lab_nombres, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group">

                    @Html.LabelFor(model => model.lab_apellidos, new { @class = "control-label", @for = "inputDefault" })
                    @Html.TextBoxFor(model => model.lab_apellidos, new { @class = "form-control", @readonly = "readonly" })
                </div>

            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.lab_firma, new { @class = "control-label" })
                    @if (Model.lab_firma != null)
                    {
                        string ruta = "data:image/jpg;base64," + Convert.ToBase64String((byte[])Model.lab_firma);
                            <div class="form-group">
                                
                                <img src="@ruta" class="img-rounded" />
                            </div>
                    }
                </div>



            </div>


            <div class="col-lg-4" style="clear:both">
                <div class="form-group">
                    @Html.ActionLink("Regresar", "Index", "Laboratorista", new { }, new { @class = "btn btn-default" })
                </div>
            </div>



        </div>
    </div>
</div>
