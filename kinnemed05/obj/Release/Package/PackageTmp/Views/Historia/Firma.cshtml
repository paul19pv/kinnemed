

@model kinnemed05.Models.historia
@{
    ViewBag.Title = "Firma";
}

<script>
    //$(document).ajaxStart(function () {
    //    $('#div_loading').show();
    //});
    //$(document).ajaxStop(function () {
    //    $('#div_loading').hide();
    //});
</script>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Firma del Paciente</h3>
        </div>
        <div class="panel-body">
            @*@using (Ajax.BeginForm("Firma", new AjaxOptions { UpdateTargetId = "div_form", LoadingElementId = "div_loading", LoadingElementDuration = 100 }))*@
@using (Html.BeginForm("Firma", "Historia", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.his_id)
                @Html.HiddenFor(model => model.his_paciente)
                @Html.HiddenFor(model => model.his_motivo)
                @Html.HiddenFor(model => model.his_tipo)
                @Html.HiddenFor(model => model.his_fecha)
                @Html.HiddenFor(model => model.his_numero)
                @Html.HiddenFor(model => model.his_medico);
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Archivo</label>
                        <input type="file" name="Firma" id="Firma">
                        @Html.ValidationMessageFor(model => model.his_firma)
                        @Html.ValidationMessage("ext")
                    </div>
                </div>

                

                <div class="col-lg-3" style="clear:both; float:right">
                    <div class="form-group">
                        @Ajax.ActionLink("Anterior", "Edit", "Concepto", new { id = Model.his_id }, new AjaxOptions { UpdateTargetId = "div_form", LoadingElementId = "div_loading", LoadingElementDuration = 100 }, new { @class = "btn btn-default" })
                        <input type="submit" value="Finalizar" class="btn btn-primary" />

                    </div>
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
