@model kinnemed05.Models.ginecologico

@{
    ViewBag.Title = "Create";
}
<script>
    $(function () {
        $("#gin_fum").datepicker({
            dateFormat:"yy-mm-dd"
        });
        $("#gin_planificacion").change(function () {
            if ($(this).is(':checked')) {
                $("#div_pla").show();
            } else {
                $("#div_pla").hide();
            }
        });

        if ($('#gin_planificacion').is(':checked')) {
            $("#div_pla").show();
        }
        else {
            $("#div_pla").hide();
        }
    });
</script>
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">2A Ginecológico</h3>
        </div>
        <div class="panel-body">
            @using (Ajax.BeginForm("Create", new AjaxOptions { UpdateTargetId = "div_form", LoadingElementId = "div_loading", LoadingElementDuration = 100 }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.gin_id, new { Value = ViewBag.gin_id })
                <div class="col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.gin_fum, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.gin_fum, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.gin_fum)
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.gin_ciclos, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.gin_ciclos, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.gin_ciclos)
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.gin_gestas, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.gin_gestas, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.gin_gestas)
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.gin_partos, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.gin_partos, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.gin_partos)
                    </div>
                </div>

    <div class="col-lg-3" style="clear: both">
        <div class="form-group">
            @Html.LabelFor(model => model.gin_cesarea, new { @class = "control-label", @for = "inputDefault" })
            @Html.TextBoxFor(model => model.gin_cesarea, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.gin_cesarea)
        </div>
    </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.gin_abortos, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.gin_abortos, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.gin_abortos)
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.gin_hijos, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.gin_hijos, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.gin_hijos)
                    </div>
                </div>
    <div class="col-lg-3" style="clear: both">
        <div class="form-group">
            <label>
                Planificación Si/No
                @Html.CheckBoxFor(model => model.gin_planificacion)
            </label>
            @Html.ValidationMessageFor(model => model.gin_planificacion)
        </div>
    </div>

                <div class="col-lg-3">
                    <div id="div_pla" class="form-garoup" style="display: none;">
                        @Html.LabelFor(model => model.gin_pla_txt, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.gin_pla_txt, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.gin_pla_txt)
                    </div>
                </div>

                <div class="col-lg-3" style="clear:both;float:right;">
                    <br />
                    <div class="form-group">
                        @Ajax.ActionLink("Anterior", "Edit", "Personal", new { id = ViewBag.gin_id }, new AjaxOptions { UpdateTargetId = "div_form", LoadingElementId = "div_loading", LoadingElementDuration = 100 }, new { @class = "btn btn-default" })
                        <input type="submit" value="Siguiente" class="btn btn-primary" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
