@model kinnemed05.Models.examen

@{
    ViewBag.Title = "Edit";
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel panel-heading">
            <h3 class="panel-title">Modificar Prueba de Laboratorio</h3>
        </div>
        <div class="panel panel-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model=>model.exa_id)
                @Html.HiddenFor(model => model.exa_estado)
                @Html.HiddenFor(model => model.exa_tipo)
                @Html.HiddenFor(model => model.exa_item)
                @Html.HiddenFor(model => model.exa_inicial)

                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.exa_nombre, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.exa_nombre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.exa_nombre)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.exa_unidad, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.exa_unidad, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.exa_unidad)
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.exa_area, new { @class = "control-label", @for = "inputDefault" })
                        @Html.DropDownList("exa_area", String.Empty)
                        @Html.ValidationMessageFor(model => model.exa_area)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.exa_orden, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextBoxFor(model => model.exa_orden, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.exa_orden)
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.exa_valores, new { @class = "control-label", @for = "inputDefault" })
                        @Html.TextAreaFor(model => model.exa_valores, new { @class = "form-control", @rows = "3" })
                        @Html.ValidationMessageFor(model => model.exa_valores)
                    </div>
                </div>
                <div class="col-lg-4" style="clear:both">
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-default" />
                        @Html.ActionLink("Regresar", "Index", "Examen", new { }, new { @class = "btn btn-default" })
                    </div>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
