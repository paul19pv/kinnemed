@model IEnumerable<kinnemed05.Models.examen>

@{
    ViewBag.Title = "Index";
}

<h2>Exámenes</h2>

<p>
    @Html.ActionLink("Create New", "Create",new { @class = "btn btn-default" })
</p>
<div class="panel panel-default">
    <div class="panel-body">
        <table class="table table-striped table-hover ">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.exa_nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.exa_unidad)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.area.are_nombre)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.exa_valores)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.exa_orden)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.exa_nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.exa_unidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.exa_tipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.area.are_nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.exa_valores)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.exa_orden)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.exa_id }, new { @class = "iconb icon-edit", @title = "Editar" })
                        @Html.ActionLink("Detalle", "Details", new { id = item.exa_id }, new { @class = "iconb icon-detail", @title = "Detalle" })
                        @Html.ActionLink("Borrar", "Delete", new { id = item.exa_id }, new { @class = "iconb icon-delete", @title = "Borrar" })
                    </td>
                </tr>
            }

        </table>

    </div>
</div> 

