@model IEnumerable<kinnemed05.Models.perfil>

@{
    ViewBag.Title = "Index";
}
<p>
    @Html.ActionLink("Crear Perfil", "Create", "", new { @class = "btn btn-default" })
</p>
<div class="panel panel-default">
    <div class="panel-body">
        <table class="table table-striped table-hover ">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.per_nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.per_descripcion)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.per_nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.per_descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.per_id }, new { @class = "iconb icon-edit", @title = "Editar" })
                        @Html.ActionLink("Details", "Details", new { id = item.per_id }, new { @class = "iconb icon-detail", @title = "Detalle" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.per_id }, new { @class = "iconb icon-delete", @title = "Borrar" })
                    </td>
                </tr>
            }

        </table>


    </div>
</div>


