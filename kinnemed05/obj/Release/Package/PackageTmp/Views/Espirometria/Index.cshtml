@model IEnumerable<kinnemed05.Models.espirometria>

@{
    ViewBag.Title = "Index";
}

<script>
    $(function () {
        //$("#fecha").datepicker({
        //    changeMonth: true,
        //    changeYear: true,
        //    dateFormat: "dd/mm/yy"
        //});
        $('#txt_paciente').autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: $("#link_paciente").attr("href"),
                    type: "POST",
                    dataType: "json",
                    //contentType: 'application/json, charset=utf-8',
                    data: {
                        search: $("#txt_paciente").val()
                    },
                    success: function (data) {

                        response($.map(data, function (item) {
                            return {
                                label: item.pac_nombres + " " + item.pac_apellidos,
                                id: item.pac_id,
                                nombres: item.pac_nombres,
                                apellidos: item.pac_apellidos
                            };
                        }));

                    },
                    error: function (xhr, status, error) {
                        alert(error);
                    }
                });
            },
            select: function (event, ui) {
                $("#paciente").val(ui.item.id);
            },
            minLength: 2
        });

        $('#txt_medico').autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: $("#link_medico").attr("href"),
                    type: "POST",
                    dataType: "json",
                    //contentType: 'application/json, charset=utf-8',
                    data: {
                        search: $("#txt_medico").val()
                    },
                    success: function (data) {

                        response($.map(data, function (item) {
                            return {
                                label: item.med_nombres + " " + item.med_apellidos,
                                id: item.med_id
                            };
                        }));

                    },
                    error: function (xhr, status, error) {
                        alert(error);
                    }
                });
            },
            select: function (event, ui) {
                $("#medico").val(ui.item.id)
            },
            minLength: 2
        });
    });
</script>

<h2>Espirometría</h2>

<p>
    @if (!User.IsInRole("paciente") && !User.IsInRole("trabajador") && !User.IsInRole("empresa"))
    {
        @Html.ActionLink("Nuevo Exámen", "Create", "", new { @class = "btn btn-default" })
        
    }
    @Html.ActionLink("Regresar", "Examen", "Home", new { }, new { @class = "btn btn-default" })
</p>
<div class="panel panel-default">
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.Hidden("paciente", "", new { Value = ViewBag.paciente })
            @Html.Hidden("medico", "", new { Value = ViewBag.medico })
            <div class="form-group">
                @Html.Label("Paciente", new { @class = "control-label col-lg-1", @for = "inputDefault" })
                <div class="col-lg-3">
                    @Html.TextBox("txt_paciente", "", new { @class = "form-control", placeholder = "Cédula/Nombres/Apellidos" })
                </div>
                @Html.Label("Medico", new { @class = "control-label col-lg-1", @for = "inputDefault" })
                <div class="col-lg-3">
                    @Html.TextBox("txt_medico", "", new { @class = "form-control", placeholder = "Cédula/Nombres/Apellidos" })
                </div>
                <input type="submit" value="Filtrar" class="btn btn-primary" />
            </div>
        }
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-body">
        <table class="table table-striped table-hover ">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.esp_paciente)
                </th>
                <th>
                    Empresa
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.esp_medico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.esp_observacion)
                </th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.paciente.pac_nombres) @Html.DisplayFor(modelItem => item.paciente.pac_apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.paciente.empresa.emp_nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.medico.med_nombres) @Html.DisplayFor(modelItem => item.medico.med_apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.esp_observacion)
                    </td>
                    <td>
                        @if (!User.IsInRole("paciente") && !User.IsInRole("trabajador") && !User.IsInRole("empresa"))
                        {
                            
                            @Html.ActionLink("Editar", "Edit", new { id = item.esp_id }, new { @class = "iconb icon-edit", @title = "Editar" })
                            @Html.ActionLink("Detalle", "Details", new { id = item.esp_id }, new { @class = "iconb icon-detail", @title = "Detalle" })
                            @Html.ActionLink("Borrar", "Delete", new { id = item.esp_id }, new { @class = "iconb icon-delete", @title = "Borrar" })
                        }

                    </td>
                    <td>
                        @*@Html.ActionLink("Reporte", "Reporte", new { id = item.esp_id }, new { @class = "iconb icon-pdf", @title = "Reporte", @target = "_blank" })*@
                        @Html.ActionLink("Descargar", "Descargar", new { id = item.esp_id }, new { @class = "iconb icon-download", @title = "Descargar", @target = "_blank" })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
<a href="@Url.Content("~/Registro/AutocompletePaciente")" id="link_paciente"></a>
<a href="@Url.Content("~/Registro/AutocompleteMedico")" id="link_medico"></a>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
