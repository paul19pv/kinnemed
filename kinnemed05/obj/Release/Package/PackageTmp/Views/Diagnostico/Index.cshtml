@model IEnumerable<kinnemed05.Models.diagnostico>

@{
    ViewBag.Title = "Index";
}

<div class="col-lg-12">
    <div class="panel panel-default" >
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <tr>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.dia_descripcion)
                    </th>
                    <th>
                        CIE10
                    </th>
                    <th>
                        Código
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.dia_tipo)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.dia_id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dia_descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sub_cie10.cie10.cie_codigo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sub_cie10.sub_codigo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dia_tipo)
                        </td>
                        <td>
                            @Ajax.ActionLink("Eliminar", "Delete", new { id = item.dia_id }, new AjaxOptions { UpdateTargetId = "div_index", LoadingElementId = "div_loading", LoadingElementDuration = 100 }, new { @class = "iconb icon-delete", @title = "Borrar" })
                        </td>
                    </tr>
                }

            </table>


        </div>
    </div>
</div>
