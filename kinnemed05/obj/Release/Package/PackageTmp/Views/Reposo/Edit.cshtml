@model kinnemed05.Models.reposo

@{
    ViewBag.Title = "Edit";
}
<script>
    $(function () {
        $("#rep_inicio").datepicker({
            dateFormat: "yy-mm-dd"
        });

        $("#rep_fin").datepicker({
            dateFormat: "yy-mm-dd"
        });

    });
</script>
@using (Ajax.BeginForm("Edit", new AjaxOptions { UpdateTargetId = "div_form", LoadingElementId = "div_loading", LoadingElementDuration = 100, OnFailure = "error" }))
{
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Concepto</h3>
            </div>
            <div class="panel-body">

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.rep_id, new { Value = ViewBag.rep_id })


                <div class="col-lg-4" style="clear:both">
                    <div class="form-group">
                        @Html.LabelFor(model => model.rep_inicio, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.rep_inicio, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.rep_inicio)
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.rep_fin, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.rep_fin, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.rep_fin)
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.rep_tiempo, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.rep_tiempo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.rep_tiempo)
                    </div>
                </div>



            </div>
        </div>
    </div>
    <div class="col-lg-3" style="clear:both; float:right">
        <div class="form-group" style="float:right">
            @Ajax.ActionLink("Anterior", "Create", "Plan", new { id = ViewBag.per_id }, new AjaxOptions { UpdateTargetId = "div_form", LoadingElementId = "div_loading", LoadingElementDuration = 100, OnFailure = "error" }, new { @class = "btn btn-default" })
            <input type="submit" value="Finalizar" class="btn btn-primary" />

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


