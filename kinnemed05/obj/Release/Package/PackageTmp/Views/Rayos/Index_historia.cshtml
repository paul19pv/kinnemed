@model IEnumerable<kinnemed05.Models.rayos>

@{
    ViewBag.Title = "Index";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Exámenes de Rayos X</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover ">
            <tr>
                <th>
                    Paciente
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ray_observacion)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.paciente.pac_nombres) @Html.DisplayFor(modelItem => item.paciente.pac_apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ray_observacion)
                    </td>
                    <td>
                        @Html.ActionLink("Descargar", "Download","Rayos", new { id = item.ray_id }, new { @class = "iconb icon-pdf", @title = "Descargar", @target="_blank" })
                        @Html.ActionLink("Detalle", "Details", "Rayos",new { id = item.ray_id }, new { @class = "iconb icon-detail", @title = "Detalle", @target = "_blank" })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
